@model List<CQRSDesignPattern.CQRSPATTERN.Results.GetProductQueryResult>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<Div class="Container">
    <br />
    <table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Aciklama</th>
        <th>Getir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.StockQuantity</td>
                <td>@item.Desc</td>
                <td>
                    <a href="/Home/GetProduct/@item.Id" class="btn btn-dark">Getir</a>
                </td>
                <td>
                    <a href="/Home/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Home/UpdateProduct/@item.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
</table>
    <a href="/Home/AddProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
</Div>